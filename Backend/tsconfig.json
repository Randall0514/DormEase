  "compilerOptions": {
  "rootDir": ".",
  "outDir": "./dist",

  "module": "CommonJS",
  "target": "ES2020",

  "types": [],
  
  "sourceMap": true,
  "declaration": true,
  "declarationMap": true,

  "noUncheckedIndexedAccess": true,
  "exactOptionalPropertyTypes": true,

  "strict": true,
